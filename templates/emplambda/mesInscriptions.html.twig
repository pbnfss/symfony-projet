{% extends 'baseConnected.html.twig' %}

{% block body %}

    <div class="form-group" style="text-align: center; font-family: 'Arial Rounded MT Bold'; padding-right: 100px; padding-left: 100px">

        <h1>Mes inscriptions</h1><br>

        <table class="table" style="border-collapse: collapse;width: 100%;border: 1px solid #ddd;">
            <thead>
            <tr>
                <th style="font-family: 'Arial Rounded MT Bold';border: 1px solid #ddd;padding: 8px;text-align: center;">ID de l'inscription</th>
                <th style="border: 1px solid #ddd;padding: 8px;font-family: 'Arial Rounded MT Bold';text-align: center;">Nom de l'employe</th>
                <th style="border: 1px solid #ddd;padding: 8px;text-align: center;font-family: 'Arial Rounded MT Bold';">Produit de la formation</th>
                <th style="border: 1px solid #ddd;padding: 8px;text-align: center;font-family: 'Arial Rounded MT Bold';">statut</th>
            </tr>
            </thead>
            <tbody>
            {% for inscription in lesFormations %}
                <tr>
                    <td style="font-family: 'Arial Rounded MT Bold';border: 1px solid #ddd;padding: 5px;text-align: center;">{{ inscription.id }}</td>
                    <td style="font-family: 'Arial Rounded MT Bold';border: 1px solid #ddd;padding: 5px;text-align: center;">{{ inscription.employe.nom }}</td>
                    <td style="font-family: 'Arial Rounded MT Bold';border: 1px solid #ddd;padding: 5px;text-align: center;">{{ inscription.formation.produit.libelle }}</td>
                    <td style="font-family: 'Arial Rounded MT Bold';border: 1px solid #ddd;padding: 5px;text-align: center;">{{ inscription.statut }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}